<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background2"
    tools:context=".Login.LoginAdminActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/i_login"
            android:layout_marginBottom="5dp"
            android:background="@drawable/icon_admin"
            android:layout_centerHorizontal="true"
            android:layout_width="120dp"
            android:layout_height="120dp" />
        <android.support.v7.widget.CardView
            android:id="@+id/rl_u"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/i_login"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#00BFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/i_u"
                    android:layout_margin="5dp"
                    android:background="@drawable/icon_admin"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/e_u"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">
                    <android.support.design.widget.TextInputEditText
                        android:hint="USERNAME"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/rl_p"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/rl_u"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#00BFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/i_p"
                    android:layout_margin="5dp"
                    android:background="@drawable/icon_password"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/e_p"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">
                    <android.support.design.widget.TextInputEditText
                        android:inputType="textPassword"
                        android:hint="PASSWORD"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <RelativeLayout
            android:id="@+id/rl_r"
            android:layout_below="@id/rl_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <CheckBox
                android:id="@+id/rememberMe"
                android:text="Remember Me"
                android:textColor="#000000"
                android:layout_marginBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <android.support.v7.widget.CardView
            android:layout_below="@id/rl_r"
            app:cardBackgroundColor="#8800ff"
            android:onClick="login"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            app:cardElevation="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:padding="15dp"
                android:textAlignment="center"
                android:text="LOGIN NOW"
                android:textSize="20dp"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</ScrollView>